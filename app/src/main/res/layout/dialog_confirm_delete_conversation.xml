<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:padding="24dp">
        <TextView
            android:id="@+id/id_dialog_confirm_delete_conversation"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_content"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/id_dialog_confirm_delete_conversation_image"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:src="@drawable/img_default_ut_placeholder"
            android:contentDescription="@string/content_description_image_view"/>
    </LinearLayout>
</LinearLayout>