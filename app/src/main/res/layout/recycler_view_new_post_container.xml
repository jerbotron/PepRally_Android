<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_card_view_new_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:minHeight="100dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/id_image_view_post_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/img_default_profile"
                android:contentDescription="@string/content_description_image_view"/>
            <TextView
                android:id="@+id/id_text_view_post_card_time_stamp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/placeholder_post_time"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_container_post_clickable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="true">
            <TextView
                android:id="@+id/id_text_view_post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="@string/placeholder_username" />
            <TextView
                android:id="@+id/id_text_view_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text_view_post_username"
                android:text="@string/example_text"
                android:textColor="@android:color/black">
            </TextView>
            <LinearLayout
                android:id="@+id/id_container_post_card_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/id_text_view_post_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="4dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/id_text_view_post_card_fistbumps_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.9"
                    android:scaleY="0.85"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/placeholder_post_fistbumps_count"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_fistbump_20"
                    android:drawableLeft="@drawable/ic_fistbump_20"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/id_text_view_post_card_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:gravity="center"
                    android:text="@string/placeholder_post_fistbumps_count"
                    android:drawablePadding="4dp"
                    app:srcCompat="@drawable/ic_replies"
                    android:drawableStart="@drawable/ic_replies"
                    android:drawableLeft="@drawable/ic_replies"
                    android:clickable="true"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/id_container_post_card_fistbump"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/id_button_post_card_fistbump"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:drawableEnd="@drawable/ic_fistbump_50"
                android:drawableRight="@drawable/ic_fistbump_50"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>