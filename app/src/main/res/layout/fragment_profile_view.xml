<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:id="@+id/profile_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/profile_view_name_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_firstname"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/profile_view_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textStyle="italic"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:id="@+id/profile_layout_fav_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/default_divider"
            android:showDividers="end">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite Team"
                android:textStyle="bold"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/profile_view_fav_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_layout_fav_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/default_divider"
            android:showDividers="end">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite Player"
                android:textStyle="bold"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/profile_view_fav_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_layout_pep_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/default_divider"
            android:showDividers="end">
            <TextView
                android:id="@+id/profile_view_pep_talk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pre-game Pep talk"
                android:textStyle="bold"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/profile_view_pep_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_layout_trash_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/default_divider"
            android:showDividers="end">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Trash Talk"
                android:textStyle="bold"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/profile_view_trash_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>